<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:CounterJO.ViewModels"
             x:Class="CounterJO.Views.AllCountersPage"
             x:DataType="ViewModels:CountersViewModel"
             NavigatedTo="ContentPage_NavigatedTo"
             Title="Your Counters">
    
    <ContentPage.BindingContext>
        <ViewModels:CountersViewModel>
            
        </ViewModels:CountersViewModel>
    </ContentPage.BindingContext>
    
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Add"
            Command="{Binding NewCommand}"
            IconImageSource="{FontImage Glyph='+', Size=22, Color=Black}">
        
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <CollectionView x:Name="countersCollection"
                        ItemsSource="{Binding AllViewCounters}"
                        Margin="20"
                        SelectionMode="None">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="ViewModels:CounterViewModel">
                    <Frame BackgroundColor="{Binding CustomColor}" CornerRadius="10" Padding="10" Margin="0,0,0,10" HasShadow="True">
                        <StackLayout>
                            <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                                <Label Text="{Binding Name}" FontSize="16" VerticalOptions="Center" TextColor="Black"/>
                            </StackLayout>
                            <Label Text="{Binding Count}" FontSize="22" TextColor="Black"/>
                            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="1">
                                <Button Grid.Column="0" Text="Add" Command="{Binding AddRelayCommand}"/>
                                <Button Grid.Column="1" Text="Substract" Command="{Binding SubstractRelayCommand}"/>
                                <Button Grid.Column="2" Text="Reset" Command="{Binding ResetRelayCommand}"/>
                                <Button Grid.Column="4" Text="Delete" Command="{Binding DeleteRelayCommand}"/>
                            </Grid>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
